extends ../femto/lib-style/src/components/base
include ../femto/lib-style/src/components/blank
include ../femto/lib-style/src/components/flash

block body
  +blank(props)
    h1 Register
    p Already have an account? #[a(href='/login') Login here.]

    +flash(flash)
    form(action="/register" method="post")
        label(for="username") Username
        input(type="text" name="username" value=form.username)
        br
        label(for="email") Email
        input#email(name="email" type="text" value=form.email placeholder="Set an email to reset your password at a later date.  We won't use it for anything beyond security.")
        br
        label(for="password") Password
        input(type="password" name="password" value=form.password)
        br
        input(type="submit" value="Register")

    hr(class='center-ball')

    a(href='/oauth/discord')
        row
            column
                logo.discord
                    i.logo
                    p.label Login with Discord