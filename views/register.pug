extends ../femto/lib-style/src/components/base
include ../femto/lib-style/src/components/blank

block body
  +blank(props)
    h1 Register
    p Already have an account? #[a(href='/login') Login here.]
    form(action="/register" method="post")
        label(for="username") Username
        input(type="text" name="username")
        br
        label(for="email") Email
        input(type="text" name="email")
        br
        label(for="password") Password
        input(type="password" name="password")
        br
        input(type="submit" value="Register")

    hr(class='center-ball')

    a(href='/oauth/discord')
        row
            column
                logo.discord
                    i.logo
                    p.label Login with Discord